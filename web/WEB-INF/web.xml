<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <servlet>
        <servlet-name>add</servlet-name>
        <servlet-class>app.servlets.AddServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>add</servlet-name>
        <url-pattern>/add</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>listAdmin</servlet-name>
        <servlet-class>app.servlets.ListAdminServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>listAdmin</servlet-name>
        <url-pattern>/listAdmin</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>listBuyer</servlet-name>
        <servlet-class>app.servlets.ListBuyerServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>listBuyer</servlet-name>
        <url-pattern>/listBuyer</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>loggin</servlet-name>
        <servlet-class>app.servlets.LogginServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>loggin</servlet-name>
        <url-pattern>/loggin</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>addNewUser</servlet-name>
        <servlet-class>app.servlets.AddNewUserServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>addNewUser</servlet-name>
        <url-pattern>/addNewUser</url-pattern>
    </servlet-mapping>

</web-app>